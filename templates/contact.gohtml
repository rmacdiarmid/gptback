{{define "contactContent"}}
<div>
<h2 class="column-8">Contact Us</h2>
<p>Please fill out the form below, and we will get back to you as soon as possible.</p>
</div>
<div class="form-wrapper">
  <form action="/contact" method="post" class="form-container">
    <div class="form-element">
      <input type="text" name="name" placeholder="Your Name" required>
    </div>
    <div class="form-element">
      <input type="email" name="email" placeholder="Your Email" required>
    </div>
    <div class="form-element">
      <input type="text" name="subject" placeholder="Subject" required>
    </div>
    <div class="form-element">
      <textarea type="message" name="message" rows="5" placeholder="Your Message" required style="width: 100%;"></textarea>
    </div>
    <div class="form-element">
      <button type="submit" class="submit-button" style="width: 100%;">Send Message</button>
    </div>
</div>
{{end}}
